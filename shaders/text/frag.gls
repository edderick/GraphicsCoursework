#version 330 core

// Interpolated values from the vertex shaders
in vec2 UV;

// Ouput data
out vec4 color;

// Values that stay constant for the whole mesh.
uniform sampler2D fontTextureSampler;

void main(){
		vec3 TexColor = texture(fontTextureSampler, UV ).xyz;

		int alpha = 1;
		if(TexColor.x + TexColor.y + TexColor.z < 0.3)
			alpha = 0;


		color = vec4(TexColor , alpha);
			
				
}
